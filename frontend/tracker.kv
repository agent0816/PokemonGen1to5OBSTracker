#:kivy 2.1.0

Screens:

<Screens@ScreenManager>:
    current: "MainMenu"
    MainMenu:
    SettingsMenu:

<SettingsMenu>:
    name: "SettingsMenu"
    GridLayout:
        rows: 2
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.15
            pos_hint: {"top": 0}
            Button:
                text: "Sprite Pfade"
            Button:
                text: "Bizhawk"
            Button:
                text: "OBS"
            Button:
                text: "Remote"
            Button:
                text: "Spieler"
            Button:
                text: "Hauptmen√º"
                on_press: root.manager.current = "MainMenu"
        GridLayout:
            pos_hint: {"bottom":0}
            size_hint: 1, 0.85

<MainMenu>:
    name: "MainMenu"
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Tracker Logo"
            pos_hint: {'center_x': 0.5}
        BoxLayout:
            size_hint: 1, 0.5
            spacing: "20dp"
            padding: "20dp"
            Button:
                text: "Einstellungen"
                on_press: root.manager.current = "SettingsMenu"
            Button:
                text: "Start Server"
            Button:
                text: "Starte Emulator"