#:kivy 2.1.0

Screens:

<Screens@ScreenManager>:
    current: "MainMenu"
    MainMenu:
    SettingsMenu:

<MainMenu>:
    name: "MainMenu"
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Tracker Logo"
            pos_hint: {'center_x': 0.5}
        BoxLayout:
            size_hint: 1, 0.5
            spacing: "20dp"
            padding: "20dp"
            Button:
                text: "Einstellungen"
                on_press: root.manager.current = "SettingsMenu"
            Button:
                text: "Start Server"
                on_press: root.launchserver()
            Button:
                text: "Starte Emulator"
                on_press: root.launchbh()

<SettingsMenu>:
    name: "SettingsMenu"
    GridLayout:
        rows: 2
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.15
            pos_hint: {"top": 0}
            ToggleButton:
                group: "settings"
                text: "Sprite Pfade"
                on_press: root.changesettingscreen('sprite')
                allow_no_selection: False
            ToggleButton:
                group: "settings"
                text: "Bizhawk"
                on_press: root.changesettingscreen('bizhawk')
                allow_no_selection: False
            ToggleButton:
                group: "settings"
                text: "OBS"
                on_press: root.changesettingscreen('obs')
                allow_no_selection: False
            ToggleButton:
                group: "settings"
                text: "Remote"
                on_press: root.changesettingscreen('remote')
                allow_no_selection: False
            ToggleButton:
                group: "settings"
                text: "Spieler"
                on_press: root.changesettingscreen('player')
                allow_no_selection: False
            Button:
                text: "Hauptmen√º"
                on_press: root.manager.current = "MainMenu"
        Screen:

<SpriteSettings>:
    GridLayout:
        cols: 2
        Label:
            text: 'Speicherort'
            size_hint: .2, 1
        AnchorLayout:
            anchor_x: 'left'
            TextInput:
                size_hint: 1, .25
                multiline: False
                write_tab: False
                on_text_validate: root.save_changes()
        Label:
            text: 'animierte Sprites'
            size_hint: .2, 1
        AnchorLayout:
            anchor_x: 'left'
            CheckBox:
                size_hint: None, None
                size: "20dp", "20dp"
                on_press: root.save_changes()
        Label:
            text: 'Sortierung'
            size_hint: .2, 1
        BoxLayout:
            orientation: "horizontal"
            spacing: "20dp"
            padding: "5dp", 0
            ToggleButton:
                size_hint: 1, .5
                pos_hint: {"center_y": .5}
                on_press: root.save_changes()
                text: 'DexNr.'
                group:"sort"
                allow_no_selection: False
            ToggleButton:
                size_hint: 1, .5
                pos_hint: {"center_y": .5}
                on_press: root.save_changes()
                text: 'Team'
                group:"sort"
                allow_no_selection: False
            ToggleButton:
                size_hint: 1, .5
                pos_hint: {"center_y": .5}
                on_press: root.save_changes()
                text: 'Level'
                group:"sort"
                allow_no_selection: False
            ToggleButton:
                size_hint: 1, .5
                pos_hint: {"center_y": .5}
                on_press: root.save_changes()
                text: 'Route'
                group:"sort"
                allow_no_selection: False

<BizhawkSettings>:
    GridLayout:
        cols: 2
        Label:
            text: 'path'
            size_hint: .2, 1
        TextInput:
            multiline: False
            write_tab: False
            on_text_validate: root.save_changes()
        Label:
            text: 'host'
            size_hint: .2, 1
        TextInput:
            multiline: False
            write_tab: False
            on_text_validate: root.save_changes()
        Label:
            text: 'port'
            size_hint: .2, 1
        TextInput:
            multiline: False
            write_tab: False
            on_text_validate: root.save_changes()

<OBSSettings>:
    GridLayout:
        cols: 2
        Label:
            text: 'password'
            size_hint: .2, 1
        TextInput:
            password: True
            multiline: False
            write_tab: False
            on_text_validate: root.save_changes()
        Label:
            text: 'host'
            size_hint: .2, 1
        TextInput:
            multiline: False
            write_tab: False
            on_text_validate: root.save_changes()
        Label:
            text: 'port'
            size_hint: .2, 1
        TextInput:
            multiline: False
            write_tab: False
            on_text_validate: root.save_changes()

<RemoteSettings>:
    Label:
        text: 'remote'

<PlayerSettings>:
    Label:
        text: 'player'
